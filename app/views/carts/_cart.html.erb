<% unless cart.line_items.empty? %>
<!-- Modal Trigger -->
<button data-target="modal1" class="btn modal-trigger"><i class="material-icons shopping_cart">
	shopping_cart
</i>  	Cart(<%= @cart.in_cart %>)</button>

<!-- Modal Structure -->

<% end %>

<div id="modal1" class="modal">
	<div class="modal-content">
		<h4>Your Cart</h4> <i id="close" class="material-icons right" style="cursor:pointer">close</i>
		<table class="stripped">
			<thead>
				<tr>
					<td>
						Title
					</td>
					<td>
						Quantity
					</td>
					<td>
						Price
					</td>
				</tr>
			</thead>
			<%= render (@cart.line_items) %>
			
			<tr class="total_line">
				<td colspan="2">
					Total
				</td>
				<td class="total_cell">
					<%= number_to_currency(@cart.total_price) %>
				</td>
			</tr>
		</table>
	</div>
	<div class="modal-footer">
		<%= button_to 'Checkout', new_order_path, method: :get ,:id => 'checkout',:class => 'modal-action modal-close waves-effect waves-green btn-flat'%>
		<%= button_to 'Empty Cart', @cart, method: :delete, data:{confirm: 'Are u sure?'} ,:class => 'modal-action modal-close waves-effect waves-green btn-flat'%>
	</div>
</div>
