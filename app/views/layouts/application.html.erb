<!DOCTYPE html>
<html>
<head>
	<title>Depot</title>
	<%= stylesheet_link_tag 'https://fonts.googleapis.com/icon?family=Material+Icons' %>
	<%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css' %>
	<%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js' %>
	<%= stylesheet_link_tag    'application', media: 'all'%>
	<%= javascript_include_tag 'application' %>
	<%= javascript_include_tag 'angular' %>
	<%= javascript_include_tag 'script'%>
	
	<%= csrf_meta_tags %>
</head>
<body>      
	<% if logged_in? && current_user.admin? %>
	<div class="container-fluid">
		<div class="row">
			<div class="col s1" style="height:100vh">
				<%= render 'dashboard/side_nav' %>
			</div>
			<div class="col s11">
			<%= render 'layouts/cartbutton' %>
				<%= yield %>
			</div>
		</div>
	</div>
	<% else %>
	<%= render 'layouts/header' %>
	<%= render 'layouts/cartbutton' %>

	<%= yield %>
	<% end %>


</body>
</html>
